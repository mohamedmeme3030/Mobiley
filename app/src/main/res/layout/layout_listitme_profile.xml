<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_alignParentRight="true"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"

    >

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="6dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/image_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_note_phone"
            android:layout_alignParentStart="true"
            android:layout_marginStart="135sp"
            android:text="Samsung"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_brand"
            android:layout_alignStart="@+id/image_brand"
            android:text="5s"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image_condition"
            android:layout_alignStart="@+id/image_brand"
            android:layout_marginStart="-2dp"
            android:layout_marginBottom="0dp"
            android:text="1200EGP"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_note_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="Mobile"
            android:textColor="@color/colorPrimaryText"
            android:textSize="13sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_brand"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_brand"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="7dp"
            android:text="User"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_price"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
