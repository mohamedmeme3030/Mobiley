<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_margin="6dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/image_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/image_note_phone"
            android:layout_marginStart="135sp"
            android:text="Samsung"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_brand"
            android:layout_below="@+id/image_brand"
            android:text="5s"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image_condition"
            android:layout_alignStart="@+id/image_brand"
            android:text="1200EGP"
            android:textColor="@color/colorbackground"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/image_note_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28sp"
            android:layout_marginTop="24sp"
            android:text="Mobile"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/image_brand"
            android:layout_marginEnd="12dp"
            android:text="01206023131312"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/image_brand"
            android:layout_marginBottom="30sp"
            android:text="new"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/image_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/image_price"
            android:layout_marginEnd="20dp"
            android:text="Location"
            android:textStyle="bold"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"/>
        <TextView
            android:id="@+id/tv_current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="10sp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
